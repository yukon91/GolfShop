@page
@model OrderConfirmationModel
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="order-confirmation-container">
    <h2>Order Confirmation</h2>
    <p>Thank you for your order! Your order number is: <strong>@Model.Order.OrderId</strong></p>
    <p>Total: <strong>@Model.Order.TotalAmount.ToString("0") kr</strong></p>

    <h4>Items:</h4>
    <ul>
        @foreach (var item in Model.Order.OrderItems)
        {
            <li>@item.Item.Name - @item.Quantity st</li>
        }
    </ul>

    <a asp-page="/Account/OrderHistory" class="btn btn-primary">View Order History</a>
</div>

<style>
    .order-confirmation-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        text-align: center;
        background: white;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        color: black;
    }

    .btn {
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-top: 20px;
    }
</style>
