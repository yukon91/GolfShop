@page
@model GolfShopHemsida.Pages.Checkout.IndexModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="checkout-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="order-summary">
                <h1 class="heading-text">Checkout</h1>
                <h3 class="heading-text">Orderöversikt</h3>
                <ul class="list-group">
                    @foreach (var item in Model.Cart.CartItems)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @item.Item.Name
                            <form method="post" asp-page-handler="RemoveFromCart">
                                <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                <button type="submit" class="remove-btn"><i class='bx bx-trash'></i></button>
                            </form>
                            <span>@item.Quantity x @item.Item.Price.ToString("0") kr</span>
                        </li>
                    }
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <strong>Total</strong>
                        <strong>@Model.Cart.CartItems.Sum(i => i.Item.Price * i.Quantity).ToString("0") kr</strong>
                    </li>
                </ul>

                <form method="post" asp-page-handler="PlaceOrder">
                    <button type="submit" class="btn btn-primary btn-block center-button">Complete Order</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .checkout-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .row.justify-content-center {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .order-summary {
        background: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .heading-text {
        color: black;
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .btn-block {
        margin-top: 20px;
    }

    .center-button {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>

