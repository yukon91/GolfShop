@page
@model GolfShopHemsida.Pages.ShopModel
@Html.AntiForgeryToken()
@{
    ViewData["Title"] = "Shop";
}
<!DOCTYPE html>
<html lang="se">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop</title>
    <link rel="stylesheet" href="~/css/ShopCSS/style1.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <div class="shop-container">
        <!-- Main Shop Content -->
        <div class="shop-content">
            <div class="shop-header">
                <h1>Välkommen till våran shop</h1>
            </div>

            <section class="produkter">
                @foreach (var item in Model.Items)
                {
                    <div class="produkt">
                        <img src="@item.ImageUrl" alt="@item.Name">
                        <h2>@item.Name</h2>
                        <p>@item.Description</p>
                        <p>@item.Price.ToString("0") kr</p>
                        @if (item.Stock > 0)
                        {
                            <form method="post" asp-page-handler="AddToCart" class="add-to-cart-form">
                                <input type="hidden" name="itemId" value="@item.ItemId" />
                                <button type="submit" class="btn btn-primary">Lägg i kundvagn</button>
                            </form>
                            <form method="post" asp-page-handler="RemoveFromCart" class="remove-item-form">
                                <input type="hidden" name="cartItemId" value="@item.ItemId" />
                                <button type="submit" class="remove-btn"><i class='bx bx-trash'></i></button>
                            </form>
                        }
                        else
                        {
                            <button class="out-of-stock" disabled>Slut i lager</button>
                        }
                    </div>
                }
            </section>
        </div>


 
            <div class="cart-sidebar">
                <div class="cart-header">
                    <h3><i class='bx bx-cart'></i> Din Kundvagn</h3>
                    <span class="cart-count">@Model.CartItemCount</span>
                </div>
                <div class="cart-items show">
                    @if (Model.CartItems != null && Model.CartItems.Any())
                    {
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="cart-item">
                                <img src="@item.Item.ImageUrl" alt="@item.Item.Name" class="cart-item-image">
                                <div class="cart-item-details">
                                    <h4>@item.Item.Name</h4>
                                    <p>@item.Quantity x @item.Item.Price.ToString("0") kr</p>
                                    <form method="post" asp-page-handler="RemoveFromCart">
                                        <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                        <button type="submit" class="remove-btn"><i class='bx bx-trash'></i></button>
                                    </form>
                                </div>
                            </div>
                        }
                        <div class="cart-total">
                            <strong>Totalt: @Model.CartTotal.ToString("0") kr</strong>
                        </div>
                        <a asp-page="/Checkout/Index" class="checkout-btn">Till kassan</a>
                    }
                    else
                    {
                        <p class="empty-cart">Din kundvagn är tom</p>
                    }
                </div>
            </div>


    <script>
        // Function to update cart count in header
        function updateCartCount(count) {
            const cartCountElement = document.querySelector('.cart-count');
            if (cartCountElement) {
                cartCountElement.textContent = count;
            }
        }

        // Function to refresh cart via AJAX
        async function refreshCart() {
            try {
                const response = await fetch('?handler=CartPartial');
                if (!response.ok) throw new Error('Failed to refresh cart');

                const cartHtml = await response.text();
                const newCart = document.createElement('div');
                newCart.innerHTML = cartHtml;

                // Replace existing cart
                const currentCart = document.querySelector('.cart-sidebar');
                currentCart.replaceWith(newCart.querySelector('.cart-sidebar'));

                // Reattach event listeners
                attachCartEvents();
                return true;
            } catch (error) {
                console.error('Error refreshing cart:', error);
                return false;
            }
        }

        // Function to attach event listeners
        function attachCartEvents() {
            // Toggle cart items visibility
            document.querySelector('.cart-header')?.addEventListener('click', function() {
                document.querySelector('.cart-items').classList.toggle('show');
            });

            // Handle remove item from cart
            document.querySelectorAll('form[asp-page-handler="RemoveFromCart"]').forEach(form => {
                form.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    const formData = new FormData(this);

                    try {
                        const response = await fetch(this.action, {
                            method: 'POST',
                            body: formData,
                            headers: {
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                            }
                        });

                        if (response.ok) {
                            const result = await response.json();
                            if (result.success) {
                                await refreshCart();
                                updateCartCount(result.count);
                            }
                        }
                    } catch (error) {
                        console.error('Error:', error);
                    }
                });
            });
        }

        // Handle add to cart forms
        document.querySelectorAll('.add-to-cart-form').forEach(form => {
            form.addEventListener('submit', async function(e) {
                e.preventDefault();

                if (!@(User.Identity?.IsAuthenticated.ToString().ToLower() ?? "false")) {
                    alert('Vänligen logga in eller skapa konto för att lägga till en produkt i kundvagnen.');
                    return;
                }

                const formData = new FormData(this);
                try {
                    const response = await fetch(this.action, {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value,
                            'Accept': 'application/json'
                        }
                    });

                    const result = await response.json();
                    if (result.success) {
                        // Update cart count immediately
                        updateCartCount(result.count);

                        // Refresh the full cart display
                        await refreshCart();

                        // Show success feedback
                        const button = this.querySelector('button');
                        const originalText = button.textContent;
                        button.textContent = '✓ Tillagd';
                        setTimeout(() => {
                            button.textContent = originalText;
                        }, 2000);
                    } else {
                        alert(result.message || 'Kunde inte lägga till produkten');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Ett fel uppstod: ' + error.message);
                }
            });
        });

        // Initial attachment of event listeners
        attachCartEvents();
    </script>
</body>
</html>